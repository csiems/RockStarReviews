<div class="album-tile">
  <div class="album-tile-image">
    {{#link-to 'albums' album.titleURL}}
    <img src="{{album.imageURL}}"/>
    {{/link-to}}
  </div>
  <div class="album-tile-info">
    <h4>{{album.title}}</h4>
    <h5>{{album.artist}}</h5>
    <h6>{{album.studio}}; {{album.releaseYear}}</h6>
    <h6>By {{#link-to 'users'}}<strong>{{session.currentUser.username}}</strong>{{/link-to}}</h6>
    <div class="album-tile-rating">
      Your Rating: {{star-rating item=album rating=album.rating on-click=(action "updateRating")}}
    </div>
    <div class="album-tile-excerpt">
      {{excerpt album.body}}
    </div>
  </div>
  <div class="read-more">
    {{#link-to 'albums' album.titleURL}}<h4>Read More</h4>{{/link-to}}
  </div>

</div>
